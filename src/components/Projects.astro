---
import TailwindIcon from "./icons/Tailwind.astro"
import CSSIcon from "./icons/CSS.astro"
import JavascriptIcon from "./icons/Javascript.astro"
import VueIcon from "./icons/Vue.astro"
import BootstrapIcon from "./icons/Bootstrap.astro"
import LaravelIcon from "./icons/Laravel.astro"
import AngularIcon from "./icons/Angular.astro"
import NodeIcon from "./icons/Node.astro"
import GitHub from "./icons/GitHub.astro"
import LinkIcon from "./icons/Link.astro"
import ReactIcon from "./icons/React.astro"
import ViteIcon from "./icons/Vite.astro"


const TAGS = {
    TAILWIND: {
      name: "Tailwind CSS",
      bgColor: "bg-[#003159]",
      textColor: "text-white",
      icon: TailwindIcon,
    },
    CSS: {
      name: "CSS",
      bgColor: "bg-blue-800",
      textColor: "text-white",
      icon: CSSIcon,
    },
    JAVASCRIPT: {
      name: "JavaScript",
      bgColor: "bg-yellow-500",
      textColor: "text-black",
      icon: JavascriptIcon,
    },
    VUE: {
      name: "Vue.js",
      bgColor: "bg-[#42B782]",
      textColor: "text-black",
      icon: VueIcon,
    },
    BOOTSTRAP: {
      name: "Bootstrap",
      bgColor: "bg-[#7911F9]/70",
      textColor: "text-white",
      icon: BootstrapIcon,
    },
    LARAVEL: {
      name: "Laravel",
      bgColor: "bg-black",
      textColor: "text-[#FB2E22]",
      icon: LaravelIcon,
    },
    ANGULAR: {
      name: "Angular",
      bgColor: "bg-[#B63031]",
      textColor: "text-white",
      icon: AngularIcon,
    },
    REACT: {
      name: "React",
      bgColor: "bg-[#58C4DC]",
      textColor: "text-black",
      icon: ReactIcon,
    },
    NODEJS: {
      name: "Node.js",
      bgColor: "bg-black",
      textColor: "text-[#84CD29]",
      icon: NodeIcon,
    },
    VITE: {
      name: "Vite",
      bgColor: "bg-[#9052af]",
      textColor: "text-[#fff1ba]",
      icon: ViteIcon,
    },
}

const PROJECTS = [
  {
    title: "Tic Tac Loco",
    subtitle: "Versión desafiante del Tres en raya",
    description: "Clásico juego de mesa pero con una dificultad añadida. Aquí no basta con poner fichas al azar, necesitas pensar y planear bien tus movimientos, casi como en el ajedrez, para ganar a tu oponente. Este proyecto está construido usando React, Vite y Tailwind CSS. Cuenta con modos de multijugador en local y de un jugador con un oponente de IA impulsado por ChatGPT a través de la API de OpenAI.",
    link: "https://tic-tac-loco.vercel.app/",
    github: "https://github.com/davidzz-code/Tic_tac_loco.git",
    image: "/projects/tic-tac-loco.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.VITE]
  },
  {
    title: "Granny's Recipes",
    subtitle: "Buscador de recetas",
    description: "Una plataforma para buscar y guardar recetas, dejar comentarios, y visualizar ubicaciones. Utiliza la API 'themealDB' y Bootstrap para el diseño, 'indexDB' para la base de datos, y 'Google Maps API' para la geolocalización.",
    link: "https://grannys-recipes.netlify.app/",
    github: "https://github.com/davidzz-code/granny_recipes.git",
    image: "/projects/grannys-recipes.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.BOOTSTRAP,]
  },
  {
    title: "Bárbaro",
    subtitle: "Gestión de una barbería",
    description: "Plataforma para gestionar una barbería que se basa en diferentes intranets para distintos roles. Incluye un sistema de citas, un sistema de horarios y una gestión de servicios y empleados. Utiliza Vue.js para el frontend y Laravel para el backend.",
    link: "http://barbaro.randion.es",
    github: "https://github.com/davidzz-code/BarBaro_frontend.git",
    image: "/projects/barbaro.webp",
    tags: [TAGS.VUE, TAGS.LARAVEL]
  },
  {
    title: "Galeria de imágenes",
    subtitle: "Rediseño",
    description: "A través de un curso de Udemy desarrollé una galería de imágenes de diferentes temáticas. Rediseñé la propuesta ofrecida en el curso para crear una página con un estilo más personal",
    link: "https://galeria-paises.netlify.app",
    github: "https://github.com/davidzz-code/Galeria.git",
    image: "/projects/galeria.webp",
    tags: [TAGS.CSS, TAGS.JAVASCRIPT]
  },
  {
    title: "Clon de Spotify",
    description: "Es un clon de la famosa plataforma Spotify en la que podemos reproducir música, usar la barra de tiempo para saltar a diferentes puntos de la canción o buscar canciones. Este proyecto sirvió para aprender las bases de Angular a través de un curso de Udemy impartido por Leifer Mendez.",
    github: "https://github.com/davidzz-code/Spotify-Angular-clone.git",
    image: "/projects/spotify-clone.webp",
    tags: [TAGS.ANGULAR, TAGS.NODEJS]
  },
  {
    title: "Posts",
    subtitle: "Plataforma para publicar textos",
    description: "Desarrollé un CRUD en Laravel de publicaciones. Además incluye registro de usuarios, autenticación para las distintas funcionalidades, uso de localización de Laravel para cambiar el idioma y  Tailwind para el diseño.",
    link: "https://dramirezruiz.randion.es/formulario_laravel_posts/public",
    github: "https://github.com/davidzz-code/crud_publicaciones.git",
    image: "/projects/publicaciones.webp",
    tags: [TAGS.LARAVEL, TAGS.TAILWIND]
  },
]
---
<div class="grid grid-cols-1 w-full">
  {
    PROJECTS.map(({image, title, subtitle, description, tags, link, github}) => (
      <article class="group flex flex-col md:flex-row md:gap-x-7 mb-20">
        <div class="w-full md:w-1/2 overflow-hidden rounded-lg">
          <img
            class="w-full object-cover transition-transform duration-300 ease-in-out transform group-hover:scale-110"
            src={image}
            alt={`Captura de pantalla del proyecto: '${title}'`}
          />
        </div>
        <div class="w-full md:w-1/2 flex flex-col md:justify-between">
          <div>
            <h3 class="mt-3 text-2xl font-bold md:text-3xl">{title}
              { 
                subtitle && <span class="font-normal text-lg md:text-xl">- {subtitle}</span>
              }
              
            </h3>
            <ul>
              {tags.map((tag: any) =>
                <span class={`opacity-90 inline-flex items-center justify-center rounded-full border border-gray-800 ${tag.bgColor} px-2 py-1 mx-1 my-3 text-xs font-medium backdrop-blur-3xl`}>
                  <span class={`flex gap-x-2 items-center ${tag.textColor}`}>
                    {tag.icon && <tag.icon class="size-3" />}
                    {tag.name}
                  </span>
                </span>
              )}
            </ul>
            <p class="mb-3 text-gray-500 font-light dark:text-gray-400 text-pretty md:mb-0">{description}</p>
          </div>
          <div class="mt-auto flex gap-x-2">
            <a 
              class="text-sm flex gap-x-2 items-center p-1 cursor-pointer border border-gray-700 dark:border-gray-400 rounded-md hover:scale-105 hover:bg-white/20 transition"
              href={github}
              target="_blank"
            >
              <GitHub class="size-5 dark:text-gray-50" />
              Código
            </a>
            {
              link &&
              <a 
                class="text-sm flex gap-x-2 items-center p-1 cursor-pointer border border-gray-700 dark:border-gray-400 rounded-md hover:scale-105 hover:bg-white/20 transition"
                href={link}
                target="_blank"
              >
                <LinkIcon class="size-5 dark:text-gray-50" />
                Visitar
              </a>
            }
          </div>
        </div>
      </article>
    ))
  }
</div>